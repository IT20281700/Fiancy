<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/box"
            android:orientation="vertical">


            <TextView
                android:id="@+id/NPage"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=" Age"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/etage"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:hint="  Age"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_box"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/pr_gen"
                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_marginBottom="10dp"/>
            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="10sp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="25dp"/>
                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="10sp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/NP_Religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="25dp"
                android:text="Religion"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/SP_Religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_pink"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/NP_minEducationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="Min Education Level"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/SP_MinEducationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_pink"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/NP_Profession"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:text=" Profession"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/et_Profession"
                android:layout_width="340dp"
                android:layout_height="30dp"
                android:hint="  Profession"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_box"
                android:layout_gravity="center"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/status"
                android:textSize="15sp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/radioGroupStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <RadioButton
                    android:id="@+id/unmarried"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unmarried"
                    android:textSize="10sp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="15dp"/>
                <RadioButton
                    android:id="@+id/married"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/married"
                    android:textSize="10sp"/>

                <RadioButton
                    android:id="@+id/widow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widow"
                    android:textSize="10sp"/>
            </RadioGroup>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="@android:string/ok"
                android:textSize="20dp"
              />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>