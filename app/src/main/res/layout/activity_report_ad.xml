<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportAd"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:background="@drawable/box"
            android:layout_marginTop="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/reason"
                android:textSize="20sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/tvReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="  Reason"
                android:textSize="16sp" />


            <Spinner
                android:id="@+id/SPReason"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:textSize="16sp"
                android:entries="@array/NPReason_Array"/>

            <TextView
                android:id="@+id/NPemail"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/email"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/NPEmail"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:hint="  email"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_box"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/NPMessage"
            android:layout_width="340dp"
            android:layout_height="230dp"
            android:hint=" Message"
            android:layout_marginTop="30dp"
            android:background="@drawable/et_box"
            android:gravity="top"
            android:layout_gravity="center"/>

            <Button
                android:id="@+id/NPReportAD"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/button"
                android:textSize="20dp"
                android:onClick="ReportAdvertisements"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>